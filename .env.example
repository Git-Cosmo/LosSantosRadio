APP_NAME="Los Santos Radio"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Coming Soon Mode - Set to true to display the coming soon page for all visitors
# Admin and staff users can still access the site normally
COMINGSOON=false

# Launch Date - Target date for countdown timer on coming soon page (ISO 8601 format)
LAUNCH_DATE="2024-12-10T18:00:00Z"

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# Supported: sqlite, mysql, pgsql, sqlsrv
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting Configuration
# Supported: log, reverb, pusher, ably, redis, null
BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local

# Reverb WebSocket Configuration (for real-time updates)
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST="localhost"
REVERB_PORT=8080
REVERB_SCHEME=http

# Vite Frontend Configuration (must match Reverb config)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Queue Configuration
# Supported: sync, database, beanstalkd, sqs, redis
QUEUE_CONNECTION=database

# Cache Configuration
# Supported: apc, array, database, file, memcached, redis, dynamodb, octane
CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Redis Configuration (if using redis for cache/queue/session)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# Supported: smtp, sendmail, mailgun, ses, postmark, resend, log
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (for S3 storage, SES mail, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# AzuraCast Configuration
# Base URL to your AzuraCast instance (without trailing slash)
AZURACAST_BASE_URL=https://your-azuracast-instance.com
# API key from AzuraCast admin panel
AZURACAST_API_KEY=your-api-key-here
# Station ID (usually 1 for first station)
AZURACAST_STATION_ID=1
# Cache duration for AzuraCast data in seconds (default: 30)
AZURACAST_CACHE_TTL=30

# Icecast Configuration
ICECAST_HOST=localhost
ICECAST_PORT=8000
ICECAST_MOUNT=/stream
ICECAST_ADMIN_USER=admin
ICECAST_ADMIN_PASSWORD=
# Enable SSL for Icecast (true/false)
ICECAST_SSL=false

# Shoutcast Configuration
SHOUTCAST_HOST=localhost
SHOUTCAST_PORT=8000
SHOUTCAST_ADMIN_PASSWORD=
SHOUTCAST_SSL=false
SHOUTCAST_STREAM_ID=1

# Radio Server Configuration
# Server type: azuracast, shoutcast, or icecast
RADIO_SERVER_TYPE=azuracast
# Now Playing update method: sse (Server-Sent Events) or polling
RADIO_NOW_PLAYING_METHOD=sse
# Polling interval in seconds (used when method is 'polling')
RADIO_POLLING_INTERVAL=15
# Enable Server-Sent Events for high-performance updates
RADIO_SSE_ENABLED=true
# Max runtime for SSE proxy connections (reduce if using load balancers with shorter timeouts)
RADIO_SSE_MAX_RUNTIME=28

# Discord OAuth
# Note: Redirect URIs can use either /auth/discord/callback or /login/discord/callback
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI="${APP_URL}/auth/discord/callback"

# Discord Bot (for server integration)
# Get these from Discord Developer Portal when creating a bot
DISCORD_BOT_TOKEN=
# Your Discord server ID (enable Developer Mode in Discord to copy)
DISCORD_GUILD_ID=

# Twitch OAuth
# Note: Redirect URIs can use either /auth/twitch/callback or /login/twitch/callback
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_REDIRECT_URI="${APP_URL}/auth/twitch/callback"

# Steam OAuth
# Get your Steam API key from https://steamcommunity.com/dev/apikey
STEAM_CLIENT_SECRET=

# Battle.net OAuth
# Note: Redirect URIs can use either /auth/battlenet/callback or /login/battlenet/callback
BATTLENET_CLIENT_ID=
BATTLENET_CLIENT_SECRET=
BATTLENET_REDIRECT_URI="${APP_URL}/auth/battlenet/callback"

# Request System Configuration
# Maximum requests per day for guest users
REQUEST_GUEST_MAX_PER_DAY=2
# Minimum seconds between requests for authenticated users
REQUEST_USER_MIN_INTERVAL_SECONDS=60
# Maximum requests within the time window for authenticated users
REQUEST_USER_MAX_PER_WINDOW=10
# Time window in minutes for request rate limiting
REQUEST_USER_WINDOW_MINUTES=20

# Laravel Scout Configuration (Search)
# Driver: collection (default, no setup required), algolia, meilisearch, typesense
SCOUT_DRIVER=collection
SCOUT_QUEUE=false

# Algolia Search Configuration (optional, if using Algolia)
# ALGOLIA_APP_ID=
# ALGOLIA_SECRET=

# Meilisearch Configuration (optional, if using Meilisearch)
# MEILISEARCH_HOST=http://localhost:7700
# MEILISEARCH_KEY=

# Activity Log Configuration
# Enable/disable activity logging for admin actions
ACTIVITY_LOGGER_ENABLED=true
ACTIVITY_LOGGER_DB_CONNECTION=
ACTIVITY_LOGGER_TABLE_NAME=activity_log

# IGDB API Configuration (Twitch OAuth for game metadata)
# Get credentials from https://dev.twitch.tv/console/apps
IGDB_CLIENT_ID=
IGDB_CLIENT_SECRET=

# Genius API Configuration (for lyrics integration)
# Get your API token from https://genius.com/api-clients
GENIUS_API_TOKEN=

# Media Content Automation API Keys (optional)
# These are used for automated content import in the media hub

# CurseForge API (for Minecraft mods)
# Get your API key from https://docs.curseforge.com/
CURSEFORGE_API_KEY=

# Steam API (for CS2 workshop items)
# Get your API key from https://steamcommunity.com/dev/apikey
STEAM_API_KEY=

# Nexus Mods API (for Skyrim mods)
# Get your API key from https://www.nexusmods.com/users/myaccount?tab=api
NEXUSMODS_API_KEY=

# Docker Configuration (for radio server management)
# Default Docker host for container orchestration
# Use 'local' for local Docker, or specify remote host URL
DOCKER_DEFAULT_HOST=local

# Sentry Error Monitoring (optional)
# Get your DSN from https://sentry.io
SENTRY_LARAVEL_DSN=
# Sample rate for performance monitoring (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1
# Environment name for error tracking
# SENTRY_ENVIRONMENT="${APP_ENV}"


