APP_NAME="Los Santos Radio"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Coming Soon Mode - Set to true to display the coming soon page for all visitors
# Admin and staff users can still access the site normally
COMINGSOON=false

# Launch Date - Target date for countdown timer on coming soon page (ISO 8601 format)
LAUNCH_DATE="2024-12-10T18:00:00Z"

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# AzuraCast Configuration
AZURACAST_BASE_URL=https://your-azuracast-instance.com
AZURACAST_API_KEY=your-api-key-here
AZURACAST_STATION_ID=1

# Icecast Configuration
ICECAST_HOST=localhost
ICECAST_PORT=8000
ICECAST_MOUNT=/stream
ICECAST_ADMIN_USER=admin
ICECAST_ADMIN_PASSWORD=

# Shoutcast Configuration
SHOUTCAST_HOST=localhost
SHOUTCAST_PORT=8000
SHOUTCAST_ADMIN_PASSWORD=
SHOUTCAST_SSL=false
SHOUTCAST_STREAM_ID=1

# Radio Server Configuration
# Server type: azuracast, shoutcast, or icecast
RADIO_SERVER_TYPE=azuracast
# Now Playing update method: sse (Server-Sent Events) or polling
RADIO_NOW_PLAYING_METHOD=sse
# Polling interval in seconds (used when method is 'polling')
RADIO_POLLING_INTERVAL=15
# Enable Server-Sent Events for high-performance updates
RADIO_SSE_ENABLED=true

# Discord OAuth
# Note: Redirect URIs can use either /auth/discord/callback or /login/discord/callback
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI="${APP_URL}/auth/discord/callback"

# Discord Bot (for server integration)
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=

# Twitch OAuth
# Note: Redirect URIs can use either /auth/twitch/callback or /login/twitch/callback
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_REDIRECT_URI="${APP_URL}/auth/twitch/callback"

# Steam OAuth
STEAM_CLIENT_SECRET=

# Battle.net OAuth
# Note: Redirect URIs can use either /auth/battlenet/callback or /login/battlenet/callback
BATTLENET_CLIENT_ID=
BATTLENET_CLIENT_SECRET=
BATTLENET_REDIRECT_URI="${APP_URL}/auth/battlenet/callback"

# Request System Configuration
REQUEST_GUEST_MAX_PER_DAY=2
REQUEST_USER_MIN_INTERVAL_SECONDS=60
REQUEST_USER_MAX_PER_WINDOW=10
REQUEST_USER_WINDOW_MINUTES=20

# Sentry Error Monitoring
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

